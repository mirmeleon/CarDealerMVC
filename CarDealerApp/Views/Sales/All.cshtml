@model  IEnumerable<CarDealerApp.Models.SalesViewModel>
@{
    ViewBag.Title = "All";
}

<h2>All</h2>


@Html.ActionLink("Add sale", "AddSales", "Sales", null, new {@class = "btn btn-primary" })
<br />
<br />

<table class="table table-striped">
    <tr>
        <th>Car sold</th>
        <th>Car sold to</th>
        <th>Sale Price</th>
        <th>Sale Discount</th>
    </tr>


    @foreach (var sale in Model)
    {
        <tr>
            <td>@sale.Car.Model @sale.Car.Make</td>
            <td>@sale.Customer.Name</td>
            <td>@sale.Price</td>
            <td>@sale.Discount</td>
        </tr>
    }

</table>