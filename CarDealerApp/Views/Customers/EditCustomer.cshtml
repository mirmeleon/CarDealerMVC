@model CarDealer.Models.ViewModels.EditCustomerViewModel

@{
    ViewBag.Title = "EditCustomer";
}

<h2>EditCustomer</h2>

<form method="post">
    <input type="number" name="Id" hidden="hidden" value="@Model.Id" />
    <div class="form-group">
        <label for="name">Name: </label>
        <input id="name" type="text" value="@Model.Name" name="name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="birthDate">Birth date: </label>
        <input id="birthDate" type="date" value="@Model.BirthDate.ToString("yyyy-MM-dd")" name="birthdate" class="form-control" />
    </div>
   
    <input type="submit" class="btn btn-outline-success btn-lg btn-block" value="Submmit" />
</form>



