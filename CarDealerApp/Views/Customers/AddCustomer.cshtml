
@{
    ViewBag.Title = "AddCustomerView";
}

<h2>AddCustomer</h2>

<form method="post" id="">
    <div class="form-group row">
        <label for="name" class="form-control-label">Name</label>
        <input type="text" name="Name" maxlength="80" minlength="4" id="" class="form-control" placeholder="Name" />
    </div>

    <div class="form-group row">
        <label for="date" class="form-control-label">Birthday</label>
        <input name="BirthDate" id="birthDate" type ="date" class="form-control" placeholder="dd/MM/yyyy" />
    </div>

    <input type="submit" class="btn btn-outline-success btn-lg btn-block" value="Add Customer" />
</form>