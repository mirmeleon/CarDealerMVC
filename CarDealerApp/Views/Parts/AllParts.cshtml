@model IEnumerable<CarDealer.Models.ViewModels.AllPartsViewModel>

@{
    ViewBag.Title = "AllParts";
}

<h2>AllParts</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierName)
        </th>
        <th>Modify</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupplierName)
        </td>
        <td>
            <a href="/parts/editPart/@item.Id" class="btn btn-success">Edit</a>
            <a href="/parts/deletePart/@item.Id" class="btn btn-danger">Delete</a>
        </td>
    
    </tr>
}

</table>
