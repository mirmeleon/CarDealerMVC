
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group row">
        <label for="Username" class="form-control-label">Username</label>
        <input type="text" name="Username" maxlength="80" minlength="4" class="form-control" placeholder="Username" />
    </div>

    <div class="form-group row">
        <label for="Password" class="form-control-label">Password</label>
        <input type="password" name="Password" class="form-control" placeholder="Password" />
    </div>

    <input type="submit" class="btn btn-outline-success btn-lg btn-block" value="Login" />
</form>

